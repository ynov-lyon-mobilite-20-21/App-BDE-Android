<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_background_logo_ynov"
    tools:context=".ui.screens.connection.signIn.SignInFragment">


    <EditText
        android:id="@+id/editTextMail2"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/createuser_illustration_edittext"
        android:ems="10"
        android:hint="@string/account_text_email"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/createuser_illustration_edittext_password"
        android:ems="10"
        android:hint="@string/account_text_password"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/buttonConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/showHideButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/buttonConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMail2"
        app:srcCompat="@drawable/userconnect_illustration_show_password"/>

    <Button
        android:id="@+id/buttonCreateUser2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/createuser_figure_button"
        android:text="@string/account_text_create_account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonConnect"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/createuser_figure_button"
        android:text="@string/account_text_login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateUser2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
