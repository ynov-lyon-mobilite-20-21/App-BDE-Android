<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingScreen"
    android:background="@color/dark_blue">

    <Button
        android:id="@+id/btn_first_Onboarding"
        android:layout_width="147dp"
        android:layout_height="40dp"
        android:text="@string/OnBoardingScreen_buttons"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="542dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/Turquoise"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/hgd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="120dp"
        android:text="@string/first_OnBoardingScreen"
        android:textColor="@color/Turquoise"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/first_OnBoardingScreen_desc"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/hgd"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"

</androidx.constraintlayout.widget.ConstraintLayout>
