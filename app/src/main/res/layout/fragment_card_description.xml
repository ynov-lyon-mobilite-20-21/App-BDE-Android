<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.event.CardDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">

            <Button
                android:id="@+id/back_home_fragment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginStart="25dp"
                android:layout_marginTop="38dp"/>

            <ImageView
                android:id="@+id/image_event"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:background="@color/color_home_fragment"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/kolok_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_event_card_description"
                android:textSize="35sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type_event_card_description"
                android:textColor="@color/black"
                android:textSize="12sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_card_description"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/horloge_image"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="123dp"
                    android:src="@drawable/horloge" />

                <TextView
                    android:id="@+id/hour_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/hour_event"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/adress_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/address_event"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/description_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/description_event"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="36dp"/>
        </LinearLayout>
            <Button
                android:id="@+id/button_take_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/button_place"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/button_event_description"
                android:layout_marginBottom="15dp"/>

    </LinearLayout>
</ScrollView>
