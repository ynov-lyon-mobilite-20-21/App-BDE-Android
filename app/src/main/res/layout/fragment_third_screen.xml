<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.onboarding.viewPager.ThirdScreen">

    <ImageView
        android:id="@+id/image_onboarding3"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_illustrations_onboarding3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title_onboarding3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="47dp"
        android:text="Prends contact quand tu veux avec les membres de ton BDE "
        android:textColor="@color/title_onboarding"
        android:textSize="@dimen/size_title_onboarding"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_onboarding3" />

    <TextView
        android:id="@+id/text_onboarding3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:text="Des questions ? Des précisions ? Nous sommes à ta disposition pour t'éclairer et t'aider au mieux à passer des moments inoubliables avec nous !"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_onboarding"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_onboarding3" />
</androidx.constraintlayout.widget.ConstraintLayout>
