<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket"
    android:layout_width="110dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp">

    <!-- Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background ticket -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/background_ticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:background="#17182F"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Theme icon -->
            <ImageView
                android:id="@+id/theme_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/soiree_foreground" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Informations ticket -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/information_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_ticket"
            app:layout_constraintVertical_bias="0.95">

            <!-- Theme event -->
            <ImageButton
                android:id="@+id/theme_event"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:backgroundTint="#17182F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageButton>

            <!-- Date event -->
            <TextView
                android:id="@+id/date_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="dd/mm/YYYY"
                android:textSize="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/theme_event"
                app:layout_constraintTop_toTopOf="@+id/theme_event"
                app:layout_constraintBottom_toTopOf="@+id/title_event"/>

            <!-- Title event -->
            <TextView
                android:id="@+id/title_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Event"
                android:layout_marginTop="10dp"
                android:textColor="#17182F"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/theme_event"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
