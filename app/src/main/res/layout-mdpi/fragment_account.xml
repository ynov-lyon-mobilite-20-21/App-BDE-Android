<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_background_logo_ynov"

    tools:context=".ui.screens.profil.ProfileFragment">

    <!-- Constraint layout parent -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_profil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Constraint layout user informations -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_informations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Campus image -->
            <ImageView
                android:id="@+id/ynov_campus"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/icon_ynov_campus_lyon"
                app:layout_constraintBottom_toTopOf="@+id/user_informations_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- User informations title -->
            <TextView
                android:id="@+id/user_informations_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/figure_background_title"

                android:fontFamily="@font/tabac_big_sans_semibold_italic_webfont"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp"
                android:shadowColor="@color/shadow_home_fragment"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="@string/my_informations"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ynov_campus" />

            <!-- User informations bloc -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/information_bloc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="42dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/account_figure_information_bde"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_informations_title">

                <!-- Informations -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/informations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/icons_informations"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingEnd="8dp"
                        android:shadowColor="@color/shadow_home_fragment"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="null"
                        android:textColor="#17182F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/filiere"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Settings icon -->
                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_options"
                        app:layout_constraintBottom_toBottomOf="@id/name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/name"
                        app:layout_constraintTop_toTopOf="@id/name" />

                    <TextView
                        android:id="@+id/filiere"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="null"
                        android:textColor="#17182F"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="null"
                        android:textColor="#17182F"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/filiere" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- DÃ©coration -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/icons_informations"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/informations"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Idea Ynov icon -->
                    <ImageView
                        android:id="@+id/ampoule"
                        android:layout_width="55dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:scaleX="1.5"
                        android:scaleY="1.3"
                        android:src="@drawable/icon_ynov_crea_idea"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1"
                        app:tint="#20A99A" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Constraint layout user tickets -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_tickets"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_informations">

            <!-- User tickets title -->
            <TextView
                android:id="@+id/user_tickets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/figure_background_title"
                android:fontFamily="@font/tabac_big_sans_semibold_italic_webfont"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="90dp"
                android:paddingBottom="5dp"
                android:shadowColor="@color/shadow_home_fragment"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="@string/my_tickets"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Carousel tickets -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_tickets"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_tickets_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

