<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.onboarding.viewPager.ThirdScreen">

    <ImageView
        android:id="@+id/logo_ynov"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:src="@drawable/onboarding_illustration_ynov_campus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_onboarding3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/onboarding_illustration_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title_onboarding3"
        app:layout_constraintTop_toBottomOf="@id/logo_ynov"/>

    <TextView
        android:id="@+id/title_onboarding3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="54dp"
        android:text="@string/onboarding_title_3"
        android:textColor="@color/title_onboarding"
        android:textSize="@dimen/size_title_onboarding"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_onboarding3"/>

    <TextView
        android:id="@+id/text_onboarding3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="70dp"
        android:text="@string/onboarding_text_3"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_onboarding"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_next"/>

    <TextView
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUIVANT"
        android:textSize="14sp"
        android:visibility="invisible"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
